<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mark.invest.p2p" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/ProsperInvestAppTheme">
        <activity
            android:name="com.mark.invest.p2p.IntroActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:windowSoftInputMode="adjustNothing"
            android:name=".AddAccountActivity">
        </activity>
        <activity
            android:name="com.mark.invest.p2p.HomeActivity" >
        </activity>
        <activity
            android:name="com.mark.invest.p2p.ListingSearchActivity"
            android:windowSoftInputMode="adjustNothing"
            >
        </activity>
        <activity
            android:name="com.mark.invest.p2p.ListingSearchResultsActivity" >
        </activity>
        <activity
            android:name="com.mark.invest.p2p.ListingDetailActivity" >
        </activity>
        <activity
            android:name="com.mark.invest.p2p.InvestmentResultActivity" >
        </activity>
        <activity
            android:noHistory="true"
            android:theme="@android:style/Theme.Holo.Dialog"
            android:name="com.mark.invest.p2p.InvestmentActivity" >
        </activity>
        <activity
            android:name="com.mark.invest.p2p.SignUpActivity" >
        </activity>

        <activity
            android:name="com.mark.invest.p2p.GetStartedActivity" >
        </activity>
    </application>


</manifest>
